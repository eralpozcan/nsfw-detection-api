# API Anahtarı (Güvenlik için değiştirin)
API_KEY=your-production-api-key-here
PREMIUM_API_KEY=your-premium-api-key-here

# Port ayarı (opsiyonel)
PORT=8000

# Node environment
NODE_ENV=production

# Rate Limit Settings
RATE_LIMIT_WINDOW_MINUTES=15  # 15 minutes (15 * 60 * 1000)
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# File Upload Settings
MAX_FILE_SIZE=10  # 10MB

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
